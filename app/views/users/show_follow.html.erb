<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
    <section>
      <%= render 'shared/stats' %>
      <% kazu=@users %>
      <% s=@users.count %>
<%= "#{@users.count} äºº" %>

      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>

    </section>
          <%= debug(@users) %>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ol class="microposts">
        <%= render @users %>
      </ol>
    <% end %>
  </div>
</div>