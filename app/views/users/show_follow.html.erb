<div class="row">
  <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
    <section>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <% @users.each do |user| %>
        <ol class="microposts" style="height:65px;">
          <%= gravatar_for user, size: 60 %>
          <%= link_to user.name, user %><br>
          <% if user.age.present? %>
            Age:<%= user.age %><br>
          <% else %>
            Age:<span class="text-muted"><i>Not set</i></span><br>
          <% end %>
          <br>
        </ol>
      <% end %>
    <% end %>
